%h2 Listing blogs
%hr/
%h4 Title
%table.table
    - @blogs.each do |blog|
        %tr
            %td
                #{blog.title}
            %td
                = link_to "Show", blog_path(blog)
            %td
                = link_to "Edit", edit_blog_path(blog)
            %td
                = link_to "Destroy", blog_path(blog),method: :delete
.mt-5
    = link_to "New Blog", new_blog_path, class:"btn btn-default"



    