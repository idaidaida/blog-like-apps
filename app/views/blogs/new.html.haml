%h3 New blog
= form_for @blog do |f|
    - if @blog.errors.any?
        - @blog.errors.full_messages.each do |msg|
            .alert.alert-danger.my-2
                #{msg}
    .form-group
        = f.label :title, "Title"
        = f.text_field :title, {class:"form-control"}
    .form-group
        = f.submit "Save", {class:"btn btn-default"}
.mt-5
    = link_to "Back To Top", root_path, class:"btn btn-default"
